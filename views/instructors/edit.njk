{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/instructors.css"/>
{% endblock styles %}

{% block content %}
    <form class="card" method="POST" action="/instructors?_method=PUT">
        <section class="avatar" style="background: url('https://source.unsplash.com/collection/9374406/500x500')
        no-repeat center center / cover"></section>
        <section class="details">
            <h3>Editar instrutor</h3>

            {% include 'instructors/fields.njk' %}

            <input 
                type="hidden" 
                name="id" 
                value="{{instructor.id}}">
                
        </section>
    </form>
{% endblock content %}