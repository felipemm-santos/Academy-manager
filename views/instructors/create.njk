{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/instructors.css"/>
{% endblock styles %}

{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section class="avatar"></section>
        <section class="details">
            <h3>Novo instrutor</h3>
            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url">
                </div>
            </div>
            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input type="text" name="name">
                </div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>29</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>Masculino</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    <span>Musculação</span>
                    <span>Crossfit</span>
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>01/01/2019</div>
            </div>
        </section>
    </form>
{% endblock content %}